{% extends "::base.html.twig" %}

{% block body %}
    <h2 class="title">Edition de localisation</h2>

    <div class="container">
        <div class="row">
            <div class="col s12 m6">
                {{ form_start(form) }}

                <div class="input-field">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_label(form.name) }}
                </div>

                <div class="input-field">
                    {{ form_widget(form.latitude, {'attr': {'class': ''}}) }}
                    {{ form_label(form.latitude) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.longitude, {'attr': {'class': ''}}) }}
                    {{ form_label(form.longitude) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.addressName, {'attr': {'class': ''}}) }}
                    {{ form_label(form.addressName) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.iconForGoogleMap, {'attr': {'class': 'material-select'}}) }}
                    {{ form_label(form.iconForGoogleMap) }}
                </div>
                <div class="form-group">
                    <button class="btn waves-effect waves-light" type="submit" name="event[save]">Sauvegarder
                        <i class="material-icons right">add</i>
                    </button>
                    {{ form_widget(form.save, {'attr': {'class': 'hide'}}) }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}